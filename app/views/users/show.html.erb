<div class="container-fluid mt-2">
  <li class="list-group-item list-group-item-action">
    <div class="d-flex w-100 mb-4">
      <h3 class="mb-1">Name : <%=@user.first_name%> <%=@user.last_name%></h3>
    </div>
    <div class="d-flex w-100">
      <p>Email: <%=@user.email%></h3>
    </div>
    <div class="d-flex w-100">
      <p>Description: <%=@user.description%></p>
    </div>
  </li>
</div>
<div class="container-fluid mt-2">
  <li class="list-group-item list-group-item-action">
    <div class="d-flex w-100 mb-4">
      <h3 class="mb-1">Events :</h3>
    </div>
    <% if !@user..empty? %>
      <%@events.each do |e|%>
      <div class="d-flex w-100">
       <%= link_to e.title, event_path(e.id) %> 
      </div>
    
      <% end %>
    <%else%>
     <div class="d-flex w-100">
      <p>No events</p>
    </div>
    <%end%>
  </li>

  <%= link_to 'modifier mot de passe / email', edit_user_registration_path %>
</div>